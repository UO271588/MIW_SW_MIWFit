@model WS.MIWFit.Web.Models.BasicInfo

@{
    ViewData["Title"] = "CalculadoraIMCView";
}

<h1>CalculadoraIMC</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CalculadoraIMCAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="peso" class="control-label">Weight</label>
                <input asp-for="peso" class="form-control" type="number" />
                <span asp-validation-for="peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="altura" class="control-label">Height</label>
                <input asp-for="altura" class="form-control" type="number"/>
                <span asp-validation-for="altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="actividad" class="control-label">Activity</label>
                <select asp-for="actividad" class="form-control" >
                    <option selected="selected" value="Sedentario">Sedentario</option>
                    <option value="Ligero">Ligero</option>
                    <option value="Moderado">Moderado</option>
                    <option value="Activo">Activo</option>
                    <option value="Muy Activo">Muy Activo</option>
                </select>
                <span asp-validation-for="actividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calcular" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
